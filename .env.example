# Server Configuration
NODE_ENV=development
PORT=3001
ALLOWED_ORIGINS=http://localhost:3000,https://yourdomain.com

# Database
TURSO_DATABASE_URL=libsql://your-database.turso.io
TURSO_AUTH_TOKEN=your-auth-token-here

# JWT Authentication (MUST match NextAuth secret)
JWT_SECRET=your-jwt-secret-must-match-nextauth-secret

# SECURITY: Separate secret for refresh tokens (recommended)
# If not set, falls back to JWT_SECRET
JWT_REFRESH_SECRET=your-separate-refresh-token-secret-here

# User Creation Security
USER_CREATION_SECRET=your-user-creation-secret-here

# Google OAuth
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=500
